@import 'vendor/normalize.css'
@import 'jeet'

#viewport
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;

body
	overflow: hidden;

.App
	position: absolute; top: 0; right: 0; bottom: 0; left: 0; width: 100%; height: 100%; overflow: hidden;

	.Slides
		position: absolute; top: 0; left: 0; bottom: 0; height: 100%; overflow: hidden;
		-webkit-transition: left 0.4s ease-in-out;

		.Slide
			position: relative;	float: left;
			background: #008000;
			box-sizing: border-box;
			padding: 25px;

		.Slide:nth-child(even)
				background: #217421;

			.Draglet
				position: absolute; left: 5%; right: 5%; bottom: 90px;
				background: rgba(255,255,255,0.3);
				height: 100px;

				.handle
					position: absolute; top: 50%; left: 0;
					background: #fff; border: 10px solid #000;
					width: 70px; height: 70px;
					margin: -45px 0 0 -45px;
					border-radius: 100px;

			.AnswerInput
				position: absolute; left: 0; right: 0; bottom: 200px; width: 300px; margin: 0 auto;
				font-size: 30px; text-align: center;
				input
					width: 100px; text-align: center;
				a
					margin: -5px 15px; padding: 10px;

			ul
				list-style: none;
				border-top: 1px solid rgba(255,255,255,0.06); border-bottom: 1px solid rgba(255,255,255,0.06);
				padding: 10px 0;

				li
					width: 100%; overflow: hidden;

					.results-answer
						float: right;
						font-weight: bold;

			.previous,
			.next
				position: absolute; bottom: 0; line-height: 70px; text-align: center;
				background: #fff;

			.previous
				left: 0;
				width: 30%;
				opacity: 0.5;

			.next
				right: 0;
				width: 70%;