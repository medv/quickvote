@import 'vendor/normalize.css'
@import 'jeet'

#viewport
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;

body
	overflow: hidden;

.App
	position: absolute; top: 0; right: 0; bottom: 0; left: 0; width: 100%; height: 100%; overflow: hidden;

	.Slides
		position: absolute; top: 0; left: 0; bottom: 0; height: 100%; overflow: hidden;
		-webkit-transition: left 0.4s ease-in-out;

		.Slide
			position: relative;	float: left;
			background: #008000;

		.Slide:nth-child(even)
				background: #217421;

			span
				display: block;

			.previous,
			.next
				position: absolute; bottom: 0; line-height: 70px; text-align: center;
				background: #fff;

			.previous
				left: 0;
				width: 30%;
				opacity: 0.5;

			.next
				right: 0;
				width: 70%;

		